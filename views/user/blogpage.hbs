<script>
    document.addEventListener('DOMContentLoaded', function() {
        const items = document.querySelectorAll('.blog-item');
        const showMoreButton = document.getElementById('showMore');
        const showMoreContainer = document.getElementById('showMoreContainer');

        let currentLimit = 6; // Start by showing 6 items

        // Initially hide all items beyond the current limit
        items.forEach((item, index) => {
            if (index >= currentLimit) {
                item.style.display = 'none';
            }
        });

        // Show the "Show More" button if there are more than 6 items
        if (items.length > 6) {
            showMoreContainer.style.display = 'block';
        }

        showMoreButton.addEventListener('click', () => {
            currentLimit += 6; // Increment limit by 6

            // Show the next set of items
            items.forEach((item, index) => {
                if (index < currentLimit) {
                    item.style.display = 'flex'; // Show the item
                }
            });

            // Hide the button if no more items to show
            if (currentLimit >= items.length) {
                showMoreButton.style.display = 'none';
            }
        });
    });
</script>
<section class="py-3 py-md-5">
    <div class="container">
        <div class="row" id="blogList">
            {{#each blogDetails}}
            <div class="row gy-3 gy-md-4 gy-lg-0 align-items-lg-center blog-item">
                <div class="col-12 col-lg-3 col-xl-2">
                    <img class="img-fluid" loading="lazy" src="https://windows.mos.ap-southeast-2.sufybkt.com/blog/{{this._id}}.jpg" alt="About 1">
                </div>
                <div class="col-12 col-lg-9 col-xl-10">
                    <div class="row justify-content-xl-center">
                        <div class="col-12 col-xl-11">
                            <h2 class="mb-3">{{this.title1}}</h2>
                            <p class="lead fs-4 text-secondary mb-3">{{this.title2}}</p>
                            <p class="mb-5">{{this.description}}</p>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        <div class="text-center" id="showMoreContainer" style="display: none;">
            <button id="showMore" class="btn btn-primary mt-4">Show More</button>
        </div>
    </div>
</section>

