<div class="content" style="min-height: 60vh">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <img src="icon/undraw_remotely_2j6y.svg" alt="Image" class="img-fluid">
            </div>
            <div class="col-md-6 contents">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <div class="mb-4">
                            <h3>Forgot Password</h3>

                            <form action="/forgot-password" method="post">
                                <div class="form-group first">
                                    <label for="">Mobile No</label>
                                    <input type="tel" name="mobile" class="form-control" id="" required>
                                </div>
                                {{#if errNumber}}
                                <div class="form-group last mb-4">
                                    <label for="" style="color: #f10707;">Invalid  Mobile No!!!</label>
                                </div>
                                {{/if}}
                                {{#if errInternal}}
                                <div class="form-group last mb-4">
                                    <label for="" style="color: #f10707;">Something Wrong!!!</label>
                                </div>
                                {{/if}}
                                {{#if existingNumberErr}}
                                <div class="form-group last mb-4"></div>
                                <label for="" style="color: #f10707;">The number does not exist !!!</label>
                        </div>
                        {{/if}}
                        <input type="submit" value="Verify OTP" class="btn btn-block btn-primary">

                        <hr>
                        <div class="form-group last mb-1  d-flex justify-content-center">
                            <span class="d-block text-left my-1 text-muted">
                                <p><a href="/login">Back to Login</a></p>
                            </span>
                        </div>

                        <div class="form-group last mb-1">
                            <span class="d-block text-left my-1 text-muted">
                                <p>Need an account? <a href="/signup" style="padding-left: 10px;">Register</a>
                                </p>
                            </span>
                        </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>