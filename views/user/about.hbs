<section class="py-3 py-md-5">
    <div class="container">
        {{#each aboutUs}}
        {{#if this.status}}
        <div class="row gy-3 gy-md-4 gy-lg-0 align-items-lg-center">
            <div class="col-12 col-lg-6 col-xl-5">
                <img class="img-fluid rounded" loading="lazy" src="/aboutUs/{{this._id}}.jpg" alt="About 1">
            </div>
            <div class="col-12 col-lg-6 col-xl-7">
                <div class="row justify-content-xl-center">
                    <div class="col-12 col-xl-11">
                        <h2 class="mb-3">{{this.title1}}</h2>
                        <p class="lead fs-4 text-secondary mb-3">{{this.title2}}</p>
                        <p class="mb-5">{{this.description}}</p>

                    </div>
                </div>
            </div>
        </div>
    </div>
      {{/if}}
  {{/each}}
</section>


{{!-- branches section start --}}
<div class="bg-light py-5 service-18">
     <header class="text-center">
      <h2 class="h5 text-uppercase mb-4">Branches</h2>
    </header>
    <div class="container">
        <!-- row  -->
        <div class="row wrap-service-18">
        {{#each branch}}
      
            <div class="col-lg-6">
                <!-- card  -->
                <div class="card border-0 mb-4">
                    <div class="row no-gutters">
                        <div class="col-md-5 d-none d-md-block icon-position rounded-left"
                            style="background-image:url(/branch/{{_id}}.jpg">
                          
                        </div>
                        <div class="col-md-7">
                            <div class="card-body ml-0 ml-md-3">
                                <h6 class="font-weight-medium">{{place}}</h6>
                                <p>{{address}}</p>
                                <a href="javascript:void(0)" class="linking text-underline">{{mobile}}</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
       
  {{/each}}
            <!-- -->
        </div>

    </div>
</div>
{{!-- branches section End --}}


<div class="content">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10">


                <div class="row justify-content-center">
                    <div class="col-md-6">

                        <h3 class="heading mb-4">Let's talk about everything!</h3>
                        {{!-- <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Voluptas debitis, fugit
                            natus?</p> --}}

                        <p><img src="icon/undraw_chat_re_re1u.svg" alt="Image" class="img-fluid"></p>


                    </div>
                    <div class="col-md-6">

                        <form class="mb-5" method="post" id="contactForm" name="contactForm">
                            <div class="row">
                                <div class="col-md-12 form-group">
                                    <input type="text" class="form-control" name="name" id="name"
                                        placeholder="Your name">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 form-group">
                                    <input type="text" class="form-control" name="email" id="email" placeholder="Email">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 form-group">
                                    <input type="text" class="form-control" name="subject" id="subject"
                                        placeholder="Subject">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 form-group">
                                    <textarea class="form-control" name="message" id="message" cols="30" rows="7"
                                        placeholder="Write your message"></textarea>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <input type="submit" value="Send Message"
                                        class="btn btn-primary rounded-0 py-2 px-4">
                                    <span class="submitting"></span>
                                </div>
                            </div>
                        </form>

                        <div id="form-message-warning mt-4"></div>
                        <div id="form-message-success">
                            Your message was sent, thank you!
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


