<div class="content" style="margin-top: 5%;">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <img src="icon/undraw_remotely_2j6y.svg" alt="Remote Work Illustration" class="img-fluid">
            </div>
            <div class="col-md-6 contents">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <div class="mb-4">
                            <h3>OTP Verification</h3>
                            <p>An OTP has been sent to {{mobile}}</p>
                        </div>
                        <form action="/otpverification" method="POST">
                            <input type="hidden" name="token" value="{{token}}" />
                            <div class="form-group first">
                                <label for="mobile">Mobile Number</label>
                                <input type="number" name="mobile" value="{{mobile}}" class="form-control" id="mobile" readonly />
                            </div>
                            <div class="form-group first">
                                <label for="otp">OTP</label>
                                <input type="number" name="otp" class="form-control" id="otp" required aria-label="Enter OTP" />
                            </div>
                            {{#if loginErr}}
                            <div class="form-group last mb-4">
                                <label for="" style="color: #f10707;">{{ loginErr }}</label>
                            </div>
                            {{/if}}
                            <input type="submit" value="Log In" class="btn btn-block btn-primary">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
