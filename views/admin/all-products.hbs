<div id="main">
    <div class="page-heading">
        <div class="page-title">
            <div class="row">
                <div class="col-12 col-md-6 order-md-1 order-last">
                    <h3>ALL Product Item Details</h3>
                </div>
                  <div class="col-12 col-md-6 order-md-1 order-last buttons">
                    <a class="btn btn-primary float-md-end" href="/admin/add-product">Add Product</a>
                </div>
            </div>
        </div>
        <section class="section">
            <div class="card">
                <div class="card-header">
                    <!--write some eding here -->
                </div>
                <div class="card-body">
                    <table class="table" id="table1">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Category</th>
                                <th>Description</th>
                                <th>Image</th>
                                <th colspan="2">Options</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each products}}
                            <tr>
                                <td>{{this.name}}</td>
                                <td>{{this.category}}</td>
                                <td>{{this.description}}</td>
                                <td><img src="/images/{{this._id}}first.jpg" alt="" style="width: 70px;heiht:70px"></td>
                                <td class="buttons">
                                    <a href="/admin/edit-product/{{this._id}}" class=" btn btn-primary d-flex justify-content-center" style="width: 150px;">Edit</a>
                                    <a href="/admin/delete-product/{{this._id}}" class=" btn btn-danger d-flex justify-content-center" onclick="deleteProduct(event)" style="width: 150px;">Delete</a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>

        </section>
    </div>
</div>