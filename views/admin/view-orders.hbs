<div id="main">
    <div class="page-heading">
        <div class="page-title">
            <div class="row">
                <div class="col-12 col-md-6 order-md-1 order-last">
                    <h3>ALL Order Details</h3>
                </div>
            </div>
        </div>
        <section class="section">
            <div class="card">
                <div class="card-header">
                    <!--write some eding here -->
                </div>
                <div class="card-body">
                    <table class="table" id="table1">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Customer Name</th>
                                <th>phone</th>
                                <th>Total Amount</th>
                              
                                <th>View Product</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each orders}}
                            <tr>
                                <td>{{this.date}}</td>
                                <td>{{this.deliveryDetails.name}}</td>
                                <td>{{this.phone}}</td>
                                <td>{{this.totalAmount}}</td>
                              
                               
                                
                             <th> <a class="btn btn-sm btn-dark d-flex justify-content-center" href="/admin/view-order-items/{{this._id}}">View Ordered Item</a></th>
                                
                             
                                <th> <a class=" btn btn-danger d-flex justify-content-center" onclick="deleteProductFromCart(event)"href="/admin/delete-order/{{this._id}}">Delete  </a></th>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>

        </section>
    </div>
</div>
