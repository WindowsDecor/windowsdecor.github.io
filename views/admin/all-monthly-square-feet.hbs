<div id="main">
    <div class="page-heading">
        <div class="page-title">
            <div class="row">
                <div class="col-12 col-md-6 order-md-1 order-last">
                    <h3>ALL Monthly Square Feet Details</h3>
                </div>
                <div class="col-12 col-md-6 order-md-1 order-last buttons">
                    <a class="btn btn-primary float-md-end" href="/admin/add-monthly-square-feet">Add Monthly Square Feet</a>
                </div>
            </div>
        </div>
        <section class="section">
            <div class="card">
                <div class="card-header">
                    <!--write some eding here -->
                </div>
                <div class="card-body">

                    <table class="table" id="table1">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Product Type </th>
                                <th>Total</th>
                                <th>Month Year</th>
                                <th colspan="2">Options</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each monthlySquareFeet}}
                            <tr>
                                <td>{{this.product}}</td>
                                <td>{{this.productType}}</td>
                                <td>{{this.total}}</td>
                                <td>{{this.monthYear}}</td>

                                <td class="buttons">
                                    <a href="/admin/edit-monthly-square-feet/{{this._id}}"
                                        class=" btn btn-primary d-flex justify-content-center"
                                        style="width: 150px;">Edit</a>
                                    <a href="/admin/delete-monthly-square-feet/{{this._id}}"
                                        class=" btn btn-danger d-flex justify-content-center"
                                        onclick="deleteProduct(event)" style="width: 150px;">Delete</a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>

                </div>
            </div>

        </section>
    </div>
</div>