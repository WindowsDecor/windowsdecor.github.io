<section id="main">
    <div class="page-heading">
        <script>
            function totalamountHandle(event) {
                const value = parseFloat(event.target.value);
                const name = event.target.name;
                const totalAmount = document.getElementById('totalAmount');
                if (name == "quantity") {
                    const priceAmt = document.getElementById('price');
                    totalAmount.value = value * priceAmt.value;
                }
                else if (name === "price") {
                    const quantityNo = document.getElementById('quantity');
                    totalAmount.value = value * quantityNo.value;
                }
            }
        </script>
        <div class="page-title">
            <div class="row">
                <div class="col-12 col-md-6 order-md-1 order-last">
                    <h3>Add Dealer Details</h3>
                </div>
            </div>
        </div>
        <section id="multiple-column-form">
            <div class="row match-height">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Enter the details of the Dealer </h4>
                        </div>
                        <div class="card-content">
                            <div class="card-body">
                                <form method="POST" enctype="multipart/form-data" action="/admin/add-dealer-detail"
                                    class="form">
                                    <div class="row">
                                        <div class="col-md-6 col-12">
                                            <div class="form-group">
                                                <label for="">Shop Name</label>
                                                <input type="text" class="form-control" id="" name="shopName"
                                                    required />
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-12">
                                            <div class="form-group">
                                                <label for="">Date:</label>
                                                <input type="date" class="form-control" id="" name="date" required />
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-12">
                                            <div class="form-group">
                                                <label for="">mobile</label>
                                                <input type="number" class="form-control" id="" name="mobile"
                                                    required />
                                            </div>
                                        </div>

                                        <div class="form-group col-md-6 col-12">
                                            <label for="">Product Type </label>
                                            <select class="form-control" name="productType" id="">
                                                <option value="Blinds">Blinds </option>
                                                <option value="Eyelet Curtain">Eyelet Curtain</option>
                                                <option value="Pleated Curtain<">Pleated Curtain</option>
                                            </select>
                                        </div>
                                        <div class="col-md-6 col-12">
                                            <div class="form-group">
                                                <label for="">Product Name</label>
                                                <input type="text" class="form-control" id="" name="productName"
                                                    required />
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-12">
                                            <div class="form-group">
                                                <label for="">Quantity</label>
                                                <input type="number" class="form-control" id="quantity" name="quantity"
                                                    onchange="totalamountHandle(event)" required />
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-12">
                                            <div class="form-group">
                                                <label for="">Price</label>
                                                <input type="number" class="form-control" id="price" name="price"
                                                    onchange="totalamountHandle(event)" required />
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-12">
                                            <div class="form-group">
                                                <label for="">Total Amount</label>
                                                <input type="text" class="form-control" id="totalAmount"
                                                    name="totalAmount" value="0" required />
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-12">
                                            <div class="form-group">
                                                <label for="">Old Amount:</label>
                                                <input type="number" class="form-control" id="" name="oldBalance"
                                                    required />
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-12">
                                            <div class="form-group">
                                                <label for="">Amount Received:</label>
                                                <input type="number" class="form-control" id="" name="amountReceived"
                                                    required />
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <button type="submit" class="btn btn-primary">Submit</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</section>