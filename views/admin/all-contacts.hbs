<div id="main">
    <div class="page-heading">
        <div class="page-title">
            <div class="row">
                <div class="col-12 col-md-6 order-md-1 order-last">
                    <h3>ALL Contact Details</h3>
                </div>
                  {{!-- <div class="col-12 col-md-6 order-md-1 order-last buttons">
                    <a class="btn btn-primary float-md-end" href="/admin/add-product">Add Product</a>
                </div> --}}
            </div>
        </div>
        <section class="section">
            <div class="card">
                <div class="card-header">
                    <!--write some eding here -->
                </div>
                <div class="card-body">
                    <table class="table" id="table1">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Mobile</th>
                                <th>Message</th>
                                <th colspan="2">Options</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each contacts}}
                            <tr>
                                <td>{{this.name}}</td>
                                <td>{{this.mobile}}</td>
                                     <td>{{this.message}}</td>
                               
                                <td class="buttons">
                                    <a href="/admin/delete-contact/{{this._id}}" class=" btn btn-danger d-flex justify-content-center" onclick="deleteProduct(event)" style="width: 150px;">Delete</a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>

        </section>
    </div>
</div>