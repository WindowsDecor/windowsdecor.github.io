<section id="main">
    <div class="page-heading">
        <div class="page-title">
            <div class="row">
                <div class="col-12 col-md-6 order-md-1 order-last">
                    <h3>Add Customer Details</h3>
                </div>
            </div>
        </div>
        <section id="multiple-column-form">
            <div class="row match-height">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Enter the details of the Customer</h4>
                        </div>
                        <div class="card-content">
                            <div class="card-body">
                                <form method="POST" enctype="multipart/form-data" action="/admin/add-product"
                                    class="form">
                                    <div class="row">
                                        <div class="col-md-6 col-12">
                                            <div class="form-group">
                                                <label for="">Customer Name</label>
                                                <input type="text" class="form-control" id="" name="name" required />
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-12">
                                            <div class="form-group">
                                                <label for="">Customer Mobile No:</label>
                                                <input type="text" class="form-control" id="" name="mobile" required />
                                            </div>
                                        </div>

                                        <div class="form-group mb-3">
                                            <label for="exampleFormControlTextarea1" class="form-label">Address:</label>
                                            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"
                                                name="address"></textarea>
                                        </div>

                                        <div class="form-group">
                                            <label for="">Place</label>
                                            <input type="text" class="form-control" id="" name="place" required />
                                        </div>
                                        <div class="form-group">
                                            <label for="">Customer Type</label>
                                            <select class="form-control" name="category" id="">

                                                <option value="Designer">Designer</option>
                                                <option value="Casual Customer">Casual Customer</option>
                                            </select>
                                        </div>
                                        <div class="form-group mb-3">
                                            <label for="exampleFormControlTextarea1"
                                                class="form-label">Products:</label>
                                            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"
                                                name="products"></textarea>
                                        </div>
                                        {{!-- <div class="form-group">
                                            <label for="">Category</label>
                                            <select class="form-control" name="category" id="">
                                                {{#each allCategory}}
                                                <option value="{{this.categoryName}}">{{this.categoryName}}</option>
                                                {{/each}}
                                            </select>
                                        </div> --}}
                                        <div class="form-group">
                                            <label for="">Branch Visted</label>
                                            <input type="text" class="form-control" id="" name="branchVisted" required />
                                        </div>
                                        <div class="form-group">
                                            <label for="">Total Purchase Amount</label>
                                            <input type="number" class="form-control" id="" name="totalAmount" required />
                                        </div>
                                        <div class="form-group">
                                            <label for="">Description</label>
                                            <input type="text" class="form-control" id="" name="description" required />
                                        </div>
                                        <div class="form-group">
                                            <label for="">Price</label>
                                            <input type="number" class="form-control" id="" name="price" required />
                                        </div>
                                        <div class="form-group">
                                            <label for="">Offer</label>
                                            <input type="number" class="form-control" id="" name="offer" required />
                                        </div>
                                        <div class="form-group">
                                            <label for="">Product size(optional)</label>
                                            <input type="text" class="form-control" id="" name="size" />
                                        </div>
                                        <div class="form-group">
                                            <label for="">colour(optional)</label>
                                            <input type="text" class="form-control" id="" name="colour" />
                                        </div>
                                        <div class="form-group">
                                            <label for="">Product design (optional)</label>
                                            <input type="text" class="form-control" id="" name="design" />
                                        </div>
                                        <div class="form-group">
                                            <label for="">Category</label>
                                            <select class="form-control" name="rating" id="">

                                                <option value="1">1</option>
                                                <option value="2">2</option>
                                                <option value="3">3</option>
                                                <option value="4">4</option>
                                                <option value="5">5</option>

                                            </select>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</section>