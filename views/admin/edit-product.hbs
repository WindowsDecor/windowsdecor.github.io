<script>
    function viewImg(event) {
        document.getElementById("imgView").src =
        URL.createObjectURL(event.target.files[0]);
    }
</script>

<div id="main">
    <section id="multiple-column-form">
        <div class="row match-height">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Add Product Details</h4>
                    </div>
                    <div class="card-content">
                        <div class="card-body">
                            <form method="POST" enctype="multipart/form-data"
                                action="/admin/edit-product/{{product._id}}">
                                <div class="row">
                                    <div class="form-group">
                                        <label for="">Product Name</label>
                                        <input type="text" class="form-control" id="" name="name"
                                            value="{{product.name}}" />
                                    </div>
                                    <div class="form-group">
                                        <label for="">Category</label>
                                        <select class="form-control" name="category" id="">
                                            <option value="{{product.category}}">{{product.category}}
                                            </option>
                                            {{#each allCategory}}
                                                <option value="{{this.categoryName}}">{{this.categoryName}}</option>
                                            {{/each}}
                                        </select>
                                    </div>
                                      <div class="form-group">
                                        <label for="">Brand</label>
                                        <input type="text" class="form-control" id="" name="brand"
                                            value="{{product.brand}}" />
                                    </div>
                                    <div class="form-group">
                                        <label for="">Description</label>
                                        <input type="text" class="form-control" id="" name="description"
                                            value="{{product.description}}" />
                                    </div>
                                    <div class="form-group">
                                        <label for="">Original Price</label>
                                        <input type="number" class="form-control" id="" name="price2"
                                            value="{{product.price2}}" />
                                    </div>
                            
                                      <div class="form-group">
                                        <label for="">Offer</label>
                                        <input type="number" class="form-control" id="" name="offer"
                                            value="{{product.offer}}" />
                                    </div>
                                      <div class="form-group">
                                        <label for="">Discount price</label>
                                        <input type="number" class="form-control" id="" name="price"
                                            value="{{product.price}}" />
                                    </div>
                                      <div class="form-group">
                                        <label for="">Product size(optional)</label>
                                        <input type="text" class="form-control" id="" name="size"
                                            value="{{product.size}}" />
                                    </div>
                                      </div>
                                      <div class="form-group">
                                        <label for="">colour(optional)</label>
                                        <input type="text" class="form-control" id="" name="colour"
                                            value="{{product.colour}}" />
                                    </div>
                                     <div class="form-group">
                                        <label for="">Product design (optional)</label>
                                        <input type="text" class="form-control" id="" name="design"
                                            value="{{product.design}}" />
                                    </div>
                                    
                                       <div>
                                        <img src="/images/{{product._id}}first.jpg" style="width: 200px;height: 200px;"
                                            alt="" id="imgView" />
                                    </div>
                                    <div class="form-group">
                                        <label for="">Image1</label>
                                        <input type="file" class="form-control-file" id="" name="image1"
                                            onchange="viewImg(event)" />
                                    </div>
                                      <div>
                                        <img src="/images/{{product._id}}second.jpg" style="width: 200px;height: 200px;"
                                            alt="" id="imgView2" />
                                    </div>
                                     <div class="form-group">
                                        <label for="">Image2</label>
                                        <input type="file" class="form-control-file" id="" name="image2"
                                            onchange="viewImg2(event)" />
                                    </div>
                                      <div>
                                        <img src="/images/{{product._id}}third.jpg" style="width: 200px;height: 200px;"
                                            alt="" id="imgView3" />
                                    </div>
                                     <div class="form-group">
                                        <label for="">Image3</label>
                                        <input type="file" class="form-control-file" id="" name="image3"
                                            onchange="viewImg3(event)" />
                                    </div>
                                      <div>
                                        <img src="/images/{{product._id}}fourth.jpg" style="width: 200px;height: 200px;"
                                            alt="" id="imgView4" />
                                    </div>
                                     <div class="form-group">
                                        <label for="">Image4</label>
                                        <input type="file" class="form-control-file" id="" name="image4"
                                            onchange="viewImg4(event)" />
                                    </div>
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                    </div>

                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>