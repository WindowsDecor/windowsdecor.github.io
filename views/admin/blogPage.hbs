<style>
</style>
<section id="main">
    <div class="page-heading">
        <div class="page-title">
            <div class="row">
                <div class="col-12 col-md-6 order-md-1 order-last">
                    <h3>Blog Manage</h3>
                </div>
            </div>
        </div>

        <section id="multiple-column-form">
            <div class="row match-height">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Enter the Details of the Blog Page</h4>
                        </div>
                        <div class="card-content">
                            <div class="card-body">
                                <form method="POST" enctype="multipart/form-data" action="/admin/blogDetails"
                                    class="form">
                                    <div class="row">
                                        <div class="col-md-6 col-12">
                                            <div class="form-group">
                                                <label for="first-name-column">Title 1:</label>
                                                <input type="text" name="title1" class="form-control" />
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-12">
                                            <div class="form-group">
                                                <label for="last-name-column">Title 2:</label>
                                                <input type="text" name="title2" class="form-control" />
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-12">
                                            <div class="form-group">
                                                <label for="last-name-column">Description:</label>
                                                <input type="text" name="description" class="form-control" />
                                            </div>
                                        </div>

                                        <div class="col-md-6 col-12">
                                            <div class="form-group">
                                                <label for="">Upload a Blog Image Image (Height: 556 px Width: 963
                                                    px):</label>
                                                <div id="image-container">
                                                    <!-- The image will be inserted here dynamically -->
                                                </div>

                                                <input type="file" class="form-control-file" id=""
                                                    onchange="checkImageDimensions(this, event,963,556)" name="image"
                                                    required />
                                            </div>
                                        </div>

                                        <div class="col-12 d-flex justify-content-end">
                                            <button type="submit" class="btn btn-primary me-1 mb-1">Submit</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>


        <section class="section">
            <div class="card">
                <div class="card-header">
                    <!--write some editing here -->
                    <h4 class="card-title">Available About Us Details</h4>
                </div>
                <div class="card-body">
                    <table class="table" id="table1">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Title 1:</th>
                                <th>Title 2:</th>
                                <th>Description</th>

                            </tr>
                        </thead>
                        <tbody>
                            {{#each blogDetails}}
                            <tr>
                                <td><img src="https://windows.mos.ap-southeast-2.sufybkt.com/blog/{{this._id}}.jpg" alt="" style="width: 70px;height:70px"></td>
                                <td>{{this.title1}}</td>
                                <td>{{this.title2}}</td>
                                <td>{{this.description}}</td>
                                <td class="buttons">
                                    <a href="/admin/blogDetails/{{this._id}}"
                                        class=" btn btn-success d-flex justify-content-center"
                                        style="width: 150px;">Edit</a>
                                    <a href="/admin/blogDetails-delete/{{this._id}}"
                                        class=" btn btn-danger d-flex justify-content-center"
                                        onclick="deleteAboutUs(event)" style="width: 150px;">Delete</a>
                                </td>

                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>

        </section>

    </div>
</section>