<div id="main">
    <div class="page-heading">
        <div class="page-title">
            <div class="row">
                <div class="col-12 col-md-6 order-md-1 order-last">
                    <h3>Employee Table</h3>
                </div>
                {{#if superadmin}}
                <div class="col-12 col-md-6 order-md-1 order-last buttons">
                    <a class="btn btn-primary float-md-end" href="/admin/add-employee">Add Employee</a>
                </div>
                {{/if}}
            </div>
        </div>
        <section class="section">
            <div class="card">
                <div class="card-header">
                    <!--write some heading here -->
                </div>
                <div class="card-body">

                    <table class="table" id="table1">
                        <thead>
                            <tr>
                                {{!-- <th>Emp ID</th> --}}
                                <th>Emp Name</th>
                                <th>Emp Email</th>
                                <th>Emp Phno</th>
                                <th>Current Amount</th>
                                {{!-- <th>History</th> --}}
                                <th colspan="2">Options</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each creditBooks}}
                            <tr>
                                {{!-- <td>{{this._id}}</td> --}}
                                <td>{{this.name}}</td>
                                <td>{{this.email}}</td>
                                <td>{{this.mobile}}</td>
                                <td>{{this.totalAmount}}</td>
                                <td>
                                    <a href="/admin/all-credit-books/{{this._id}}"
                                        class="btn btn-info d-flex justify-content-center"
                                        style="width: 150px;">View</a>
                                    {{#if ../superadmin}}
                                    <a href="/admin/employe/{{this._id}}"
                                        class="btn btn-primary mt-1 d-flex justify-content-center"
                                        style="width: 150px;">Edit</a>
                                    {{/if}}
                                    <a href="/admin/delete-employee/{{this._id}}"
                                        class="btn btn-danger mt-1 d-flex justify-content-center"
                                        onclick="deleteProduct(event)" style="width: 150px;">Delete</a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </section>
    </div>
</div>