<section id="main">
<div class="page-heading">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>Edit Blog Details</h3>
            </div>
        </div>
    </div>
    <section id="multiple-column-form">
        <div class="row match-height">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Enter the details of the Blog </h4>
                    </div>
                    <div class="card-content">
                        <div class="card-body">
                            <form method="POST" enctype="multipart/form-data"
                                action="/admin/blogDetails/{{blogDetails._id}}" class="form">
                                <div class="row">
                                    <div class="col-md-6 col-12">
                                        <div class="form-group">
                                            <label for="">title 1</label>
                                            <input type="text" class="form-control" id="" name="title1"
                                                value="{{blogDetails.title1}}"  />
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <div class="form-group">
                                            <label for="">title 2</label>
                                            <input type="text" class="form-control" id="" name="title2"
                                                value="{{blogDetails.title2}}"  />
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <div class="form-group">
                                            <label for="">description</label>
                                            <input type="text" class="form-control" id="" name="description"
                                                value="{{blogDetails.description}}" required />
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-12"></div>
                                    <div class="form-group">
                                        <label for="">Upload a Blog Image Image (Height: 556 px Width: 963 px):</label>
                                        <div id="image-container">
                                            <!-- The image will be inserted here dynamically -->
                                        </div>

                                        <input type="file" class="form-control-file" id=""
                                            onchange="checkImageDimensions(this, event,963,556)" name="image"
                                            />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
</div>
</section>
</div>
</section>