<section id="main">
    <script>
        function handelcustomerChange(event){
            const user_id = event.target.value
             $.ajax({
      url:'/admin/old-balance',
      data:{
            id:user_id
      },
      method:'get',
     success:(response)=>{
          if(response){
               document.getElementById('oldbalance').value = response
          }
        }
        })
        }
    </script>
    <div class="page-heading">
        <div class="page-title">
            <div class="row">
                <div class="col-12 col-md-6 order-md-1 order-last">
                    <h3>Add Credit Book Details</h3>
                </div>
            </div>
        </div>
        <section id="multiple-column-form">
            <div class="row match-height">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Enter the details of the Credit Book </h4>
                        </div>
                        <div class="card-content">
                            <div class="card-body">
                                <form method="POST" enctype="multipart/form-data" action="/admin/add-credit-book"
                                    class="form">
                                    <div class="row">
                                        <div class="col-md-6 col-12">
                                            <div class="form-group">
                                                <label for="">Staff Name</label>
                                                {{!-- <input type="text" class="form-control" id="" name="staffName" required /> --}}
                                                <select name="staffname" class="form-control" onchange="handelcustomerChange(event)" >
                                                    <option selected disabled>Select</option>
                                                    {{#each customers}}
                                                    <option value={{this._id}} class="form-control w-100">{{this.name}}</option>
                                                    {{/each}}
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-12">
                                            <div class="form-group">
                                                <label for="">Date:</label>
                                                <input type="date" class="form-control" id="" name="date" required />
                                            </div>
                                        </div>
                                         <div class="col-md-4 col-12">
                                            <div class="form-group">
                                                <label for="">Debited Amount</label>
                                                <input type="number" class="form-control" id="" name="debitAmount" value="0" required />
                                            </div>
                                        </div>
                                        <div class="col-md-4 col-12">
                                            <div class="form-group">
                                                <label for="">Credited Amount:</label>
                                                <input type="number" class="form-control" id="" name="creditAmount" value="0" required />
                                            </div>
                                        </div>
                                         <div class="col-md-4 col-12">
                                            <div class="form-group">
                                                <label for="">old Balance </label>
                                                <input type="number" class="form-control" id="oldbalance" name="oldbalance"  disabled required />
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="">Party Name</label>
                                            <input type="text" class="form-control" id="" name="partyName"  />
                                        </div>
                                        <div class="form-group">
                                            <label for="">Payment Mode</label>
                                            <select class="form-control" name="paymentMode" id="">
                                                <option value="Not Recived">Not Recived</option>
                                                <option value="Gpay">Gpay</option>
                                                <option value="Cash">Cash</option>
                                                <option value="Card">Card</option>
                                            </select>
                                        </div>
                                    
                                        <div class="form-group">
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                    </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</section>