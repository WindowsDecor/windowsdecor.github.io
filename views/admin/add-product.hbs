 <section id="main">
 <div class="page-heading">
        <div class="page-title">
            <div class="row">
                <div class="col-12 col-md-6 order-md-1 order-last">
                    <h3>Add Products</h3>
                </div>
            </div>
        </div>
    <section id="multiple-column-form">
        <div class="row match-height">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Enter the details of the products</h4>
                    </div>
                    <div class="card-content">
                        <div class="card-body">
                            <form method="POST" enctype="multipart/form-data" action="/admin/add-product" class="form">
                                <div class="row">
                                    <div class="form-group">
                                        <label for="">Product Name</label>
                                        <input type="text" class="form-control" id="" name="name" required />
                                    </div>
                                    <div class="form-group">
                                        <label for="">Category</label>
                                        <select class="form-control" name="category" id="">
                                              {{#each allCategory}}
                                                <option value="{{this.categoryName}}">{{this.categoryName}}</option>
                                             {{/each}}
                                        </select>
                                    </div>
                                       <div class="form-group">
                                        <label for="">Brand</label>
                                        <input type="text" class="form-control" id="" name="brand" required />
                                    </div>
                                    <div class="form-group">
                                        <label for="">Description</label>
                                        <input type="text" class="form-control" id="" name="description" required />
                                    </div>
                                     <div class="form-group">
                                        <label for="">Original Price</label>
                                        <input type="number" class="form-control" id="" name="price2" required />
                                    </div>
                                     <div class="form-group">
                                        <label for="">Offer</label>
                                        <input type="number" class="form-control" id="" name="offer" required />
                                    </div>
                                        <div class="form-group">
                                        <label for="">Discount Price</label>
                                        <input type="number" class="form-control" id="" name="price" required />
                                    </div>
                                     <div class="form-group">
                                        <label for="">Product size(optional)</label>
                                        <input type="text" class="form-control" id="" name="size"  />
                                    </div>
                                     <div class="form-group">
                                        <label for="">colour(optional)</label>
                                        <input type="text" class="form-control" id="" name="colour"  />
                                    </div>
                                     <div class="form-group">
                                        <label for="">Product design (optional)</label>
                                        <input type="text" class="form-control" id="" name="design"  />
                                    </div>
                                    <div class="form-group">
                                        <label for="">Image1</label>
                                        <div id=""> </div>
                                        <input type="file" class="form-control-file" id="" name="image1" required />
                                    </div>
                                     <div class="form-group">
                                        <label for="">Image2</label>
                                        <input type="file" class="form-control-file" id="" name="image2"  />
                                    </div>
                                     <div class="form-group">
                                        <label for="">Image3</label>
                                        <input type="file" class="form-control-file" id="" name="image3"  />
                                    </div>
                                     <div class="form-group">
                                        <label for="">Image4</label>
                                        <input type="file" class="form-control-file" id="" name="image4"  />
                                    </div>
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                    </div>

                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
</section>